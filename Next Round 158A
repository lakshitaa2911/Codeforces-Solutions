#include <iostream>
using namespace std;
int main()
{
    int n, k;
    cin >> n >> k;
    int l;
    for (int i = 0; i < k; ++i)
    {
        cin >> l;
        if (l == 0)
        {
            cout << i << endl;
            return 0;
        }
    }
    int b;
    for (int i = k; i < n; ++i)
    {
        cin >> b;
        if (b != l)
        {
            cout << i << endl;
            return 0;
        }
    }

    cout << n << endl;
    return 0;
}
